<div class="container">

  <div class="row">

    <div class="col-lg-12" id="imgTitle">
    <h1>Burgers!</h1>
<img src="/assets/img/burger.jpg" alt="burger" class="img-responsive center-block">

</div>
</div>

<div class="row">

    <div class="col-md-6">
<h2>Burgers To be Devoured!</h2>
</div>

<div class="col-md-6">
<h2>Eaten Burgers</h2>
</div>
</div>


<div class="row">

    <div class="col-md-6">
<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block devoured=false}}
    {{/unless}}
  {{/each}}
</ul>
</div>

 <div class="col-md-6">
<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burger-block devoured=true}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

<div class="row">

    <div class="col-md-12">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>
</div>
</div>